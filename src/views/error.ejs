<div class="content-container auth-container">
  <div class="form-container">
    <div class="card">
      <div class="card-header" style="background-color: #dc3545">
        <h4><%= title %></h4>
      </div>
      <div class="card-body">
        <div class="error-icon">
          <% if (error.status === 404) { %>
          <i class="fas fa-exclamation-circle error-icon-404"></i>
          <% } else if (error.status === 403) { %>
          <i class="fas fa-lock error-icon-403"></i>
          <% } else { %>
          <i class="fas fa-exclamation-triangle error-icon-default"></i>
          <% } %>
        </div>

        <h5 class="error-title"><%= message %></h5>

        <% if (error.status) { %>
        <p class="error-code">Код ошибки: <%= error.status %></p>
        <% } %> <% if (process.env.NODE_ENV === 'development' && error.stack) {
        %>
        <div class="error-details">
          <h6>Детали ошибки (только для разработки):</h6>
          <pre class="error-stack"><%= error.stack %></pre>
        </div>
        <% } %>

        <div class="error-actions">
          <% if (user && user.role === 'admin') { %>
          <a href="/admin" class="btn btn-primary">
            <i class="fas fa-tachometer-alt"></i> Вернуться на главную
          </a>
          <% } else { %>
          <a href="/" class="btn btn-primary">
            <i class="fas fa-home"></i> Вернуться на главную
          </a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
